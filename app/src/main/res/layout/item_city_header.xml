<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/titlTV1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="当前定位"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textSize="12sp"
            android:textColor="#666"/>
    <ImageView
            android:id="@+id/locationIV"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:layout_constraintTop_toBottomOf="@id/titlTV1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="13dp"
            android:src="@mipmap/location_icon"/>
    <TextView
            android:id="@+id/item_header_city_dw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color333"
            app:layout_constraintLeft_toRightOf="@id/locationIV"
            app:layout_constraintTop_toTopOf="@id/locationIV"
            app:layout_constraintBottom_toBottomOf="@id/locationIV"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:text="东莞"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            app:layout_constraintTop_toBottomOf="@id/item_header_city_dw"
            android:layout_marginTop="31dp"
            android:paddingRight="30dp"
            android:orientation="vertical">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#666"
                android:text="搜索记录"/>
        <com.easyhome.serve.mvp.ui.widget.QGridView
                android:id="@+id/item_header_city_gridview"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@color/white"
                android:numColumns="4"
                android:stretchMode="columnWidth"
                android:columnWidth="70dp"
                android:verticalSpacing="18dp"
                android:layout_marginBottom="16dp"
                android:horizontalSpacing="11dp">
        </com.easyhome.serve.mvp.ui.widget.QGridView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>