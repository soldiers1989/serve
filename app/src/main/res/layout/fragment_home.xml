<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
            android:id="@+id/locationIV"
            android:layout_width="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="29dp"
            android:src="@mipmap/location"
            android:layout_height="15dp"/>
    <TextView
            android:id="@+id/cityTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/locationIV"
            android:layout_marginLeft="7dp"
            app:layout_constraintBottom_toBottomOf="@id/locationIV"
            android:text="定位中..."
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@id/locationIV"
            android:gravity="center"
            android:textColor="@color/secondTitle"/>

    <TextView
            android:id="@+id/titleTV"
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/locationIV"
            app:layout_constraintBottom_toBottomOf="@id/locationIV"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/color333"
            android:text="居然装饰"
            android:layout_height="wrap_content"/>

    <ImageView android:layout_width="15dp"
               android:layout_height="15dp"
               android:src="@mipmap/notification"
               app:layout_constraintRight_toRightOf="parent"
               android:layout_marginRight="12dp"
               app:layout_constraintTop_toTopOf="@id/locationIV"
               app:layout_constraintBottom_toBottomOf="@id/locationIV"/>


    <LinearLayout
            android:id="@+id/searchLL"
            android:layout_width="match_parent"
            android:background="@drawable/login_rb_bg_unchecked"
            android:layout_marginRight="12dp"
            app:layout_constraintTop_toBottomOf="@id/titleTV"
            android:layout_marginTop="18dp"
            app:layout_constraintBottom_toTopOf="@+id/homeSV"
            android:layout_marginBottom="14dp"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:layout_height="29dp"></LinearLayout>

    <ImageView
            android:id="@+id/searchIV"
            android:layout_width="15dp"
            android:src="@mipmap/search"
            app:layout_constraintTop_toTopOf="@id/searchLL"
            app:layout_constraintBottom_toBottomOf="@id/searchLL"
            app:layout_constraintLeft_toLeftOf="@id/searchLL"
            android:layout_marginLeft="11dp"
            android:layout_height="15dp"/>

    <TextView
            android:id="@+id/searchED"
            android:layout_width="0dp"
            app:layout_constraintLeft_toRightOf="@id/searchIV"
            app:layout_constraintRight_toRightOf="@id/searchLL"
            app:layout_constraintTop_toTopOf="@id/searchLL"
            app:layout_constraintBottom_toBottomOf="@id/searchLL"
            android:hint="搜索设计案例、家装材料"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:textSize="14sp"
            android:layout_height="16dp"/>

    <android.support.v4.widget.NestedScrollView
            android:id="@+id/homeSV"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/searchLL"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp">


        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <com.bigkoo.convenientbanner.ConvenientBanner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="132dp"
                    app:autoTurningTime="3000"
                    app:layout_constraintTop_toTopOf="parent"
                    app:canLoop="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
            />

            <ImageView
                    android:id="@+id/homeIV1"
                    android:layout_width="50dp"
                    app:layout_constraintTop_toBottomOf="@id/banner"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    android:src="@mipmap/home_icon_3"
                    app:layout_constraintRight_toLeftOf="@id/homeIV2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_height="50dp"/>
            <ImageView
                    android:id="@+id/homeIV2"
                    android:layout_width="50dp"
                    app:layout_constraintTop_toTopOf="@id/homeIV1"
                    android:src="@mipmap/home_icon_3"
                    app:layout_constraintLeft_toRightOf="@id/homeIV1"
                    app:layout_constraintRight_toLeftOf="@id/homeIV3"
                    android:layout_height="50dp"/>
            <ImageView
                    android:id="@+id/homeIV3"
                    android:layout_width="50dp"
                    app:layout_constraintTop_toTopOf="@id/homeIV1"
                    app:layout_constraintLeft_toRightOf="@id/homeIV2"
                    android:src="@mipmap/home_icon_3"
                    app:layout_constraintRight_toLeftOf="@id/homeIV4"
                    android:layout_height="50dp"/>
            <ImageView
                    android:id="@+id/homeIV4"
                    android:layout_width="50dp"
                    app:layout_constraintTop_toTopOf="@id/homeIV1"
                    android:src="@mipmap/home_icon_3"
                    app:layout_constraintLeft_toRightOf="@id/homeIV3"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_height="50dp"/>


            <TextView
                    android:id="@+id/homeTV1"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/homeIV1"
                    android:layout_marginTop="14dp"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    android:text="精品案例"
                    android:textSize="15sp"
                    android:textColor="#333"
                    app:layout_constraintRight_toLeftOf="@id/homeIV2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/homeTV2"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/homeTV1"
                    app:layout_constraintLeft_toRightOf="@id/homeTV1"
                    android:text="精品案例"
                    android:textSize="15sp"
                    android:textColor="#333"
                    app:layout_constraintRight_toLeftOf="@id/homeTV3"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/homeTV3"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/homeTV1"
                    app:layout_constraintLeft_toRightOf="@id/homeTV2"
                    android:text="精品案例"
                    android:textSize="15sp"
                    android:textColor="#333"
                    app:layout_constraintRight_toLeftOf="@id/homeTV4"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/homeTV4"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/homeTV1"
                    android:text="精品案例"
                    android:textSize="15sp"
                    android:textColor="#333"
                    app:layout_constraintLeft_toRightOf="@id/homeTV3"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_height="wrap_content"/>


            <View
                    android:id="@+id/homeFGV1"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/homeTV1"
                    android:layout_marginTop="24dp"
                    android:background="@color/colorF1F"
                    android:layout_height="12dp"/>


            <ImageView
                    android:id="@+id/noticIV"
                    android:layout_width="14dp"
                    android:src="@mipmap/notice"
                    app:layout_constraintTop_toBottomOf="@id/homeFGV1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="9dp"
                    android:layout_height="14dp"/>
            <TextView
                    android:id="@+id/noticTV"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/noticIV"
                    app:layout_constraintBottom_toBottomOf="@id/noticIV"
                    android:text="居然装饰，促销活动上线！！！"
                    app:layout_constraintLeft_toRightOf="@id/noticIV"
                    android:layout_marginLeft="9dp"
                    android:textColor="@color/color999"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>

            <View
                    android:id="@+id/homeFGV2"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/noticTV"
                    android:background="@color/colorF1F"
                    android:layout_marginTop="9dp"
                    android:layout_height="12dp"/>

            <TextView
                    android:id="@+id/ksTV"
                    android:layout_width="wrap_content"
                    android:text="推荐设计师"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="12dp"
                    app:layout_constraintTop_toBottomOf="@id/homeFGV2"
                    android:textColor="@color/color333"
                    android:layout_height="wrap_content"/>


            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvDynamicTab"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingTop="20dp"
                    app:layoutManager="android.support.v7.widget.GridLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ksTV"
                    app:spanCount="5"
                    tools:listitem="@layout/item_dynamic_head_button_layout"/>


            <View
                    android:id="@+id/homeFGV3"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/rvDynamicTab"
                    android:background="@color/colorF1F"
                    android:layout_marginTop="9dp"
                    android:layout_height="12dp"/>


            <TextView
                    android:id="@+id/hospitalTV"
                    android:layout_width="wrap_content"
                    android:text="3D设计"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="12dp"
                    app:layout_constraintTop_toBottomOf="@id/homeFGV3"
                    android:textColor="@color/color333"
                    android:layout_height="wrap_content"/>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/hospitalRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    app:spanCount="5"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/hospitalTV"/>
            <View
                    android:id="@+id/homeFGV4"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/hospitalRV"
                    android:background="@color/colorF1F"
                    android:layout_marginTop="9dp"
                    android:layout_height="12dp"/>

            <TextView
                    android:id="@+id/medicineTV"
                    android:layout_width="wrap_content"
                    android:text="合作品牌"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="12dp"
                    app:layout_constraintTop_toBottomOf="@id/homeFGV4"
                    android:textColor="@color/color333"
                    android:layout_height="wrap_content"/>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/medicineRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    app:spanCount="5"
                    tools:listitem="@layout/home_medicinel_layout"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/medicineTV"/>

            <View
                    android:id="@+id/homeFGV5"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/medicineRV"
                    android:background="@color/colorF1F"
                    android:layout_marginTop="9dp"
                    android:layout_height="12dp"/>

            <TextView
                    android:id="@+id/informationTV"
                    android:layout_width="wrap_content"
                    android:text="促销"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="12dp"
                    app:layout_constraintTop_toBottomOf="@id/homeFGV5"
                    android:textColor="@color/color333"
                    android:layout_height="17dp"/>


            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="更多>>"
                      app:layout_constraintBaseline_toBaselineOf="@id/informationTV"
                      app:layout_constraintRight_toRightOf="parent"
                      android:layout_marginRight="13dp"
                      android:textColor="@color/color999"/>


            <android.support.v7.widget.RecyclerView
                    android:id="@+id/informatioRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    app:spanCount="5"
                    tools:listitem="@layout/home_informatio_layout"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/informationTV"/>


        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>