<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginTop="6dp"
            android:layout_height="50dp">

        <TextView
                android:id="@+id/title11"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="标题："
                android:textSize="13sp"
                android:textColor="@color/black"
                android:gravity="center_vertical|right"/>

        <EditText
                android:id="@+id/phone3"
                android:layout_width="246dp"
                android:layout_height="29dp"
                android:background="@drawable/labels_bac_d"
                app:layout_constraintLeft_toRightOf="@id/title11"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:hint=""
                android:textSize="13sp"
        />

        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/colorFFE"
              app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

        <TextView
                android:id="@+id/title12"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="日期："
                android:textSize="13sp"
                android:textColor="@color/black"
                android:gravity="center_vertical|right"/>

        <TextView android:layout_width="0dp"
                  android:layout_height="match_parent"
                  app:layout_constraintLeft_toRightOf="@id/title12"
                  app:layout_constraintRight_toRightOf="parent"
                  android:textColor="@color/color999"
                  android:gravity="center_vertical"
                  android:text="点击选择"
                  android:textSize="13sp"
                  android:background="@null"/>
        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/colorFFE"
              app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

        <TextView
                android:id="@+id/title5"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="全天："
                android:textSize="13sp"
                android:textColor="@color/black"
                android:gravity="center_vertical|right"/>

        <Switch android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="30dp"
                android:textColor="@color/color999"
                android:gravity="center_vertical"
                android:textSize="13sp"
                android:background="@null"/>
        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/colorFFE"
              app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

        <TextView
                android:id="@+id/title4"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="开始："
                android:textSize="13sp"
                android:textColor="@color/black"
                android:gravity="center_vertical|right"/>

        <TextView android:layout_width="0dp"
                  android:layout_height="match_parent"
                  app:layout_constraintLeft_toRightOf="@id/title4"
                  app:layout_constraintRight_toRightOf="parent"
                  android:textColor="@color/color999"
                  android:gravity="center_vertical"
                  android:text="点击设置时间"
                  android:textSize="13sp"
                  android:background="@null"/>
        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/colorFFE"
              app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/title6"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="备注："
                android:textSize="13sp"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/black"
                android:gravity="center_vertical|right"/>

        <EditText
                android:id="@+id/area"
                android:layout_width="249dp"
                android:layout_height="67dp"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:background="@drawable/labels_bac_d"
                app:layout_constraintTop_toTopOf="@id/title6"
                app:layout_constraintLeft_toRightOf="@id/title6"
        />


    </android.support.constraint.ConstraintLayout>

</LinearLayout>
