<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
                android:id="@+id/item1"
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="44dp">

            <TextView
                    android:id="@+id/title1"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="商品编号："
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical|right"/>

            <EditText android:layout_width="196dp"
                      android:layout_height="29dp"
                      android:background="@drawable/labels_bac_d"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintLeft_toRightOf="@id/title1"
                      android:textColor="@color/black"
                      android:textSize="13sp"
            />
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/colorFFE"
                  app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:id="@+id/item2"
                app:layout_constraintTop_toBottomOf="@id/item1"
                android:layout_width="match_parent"
                android:layout_height="44dp">

            <TextView
                    android:id="@+id/title2"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="商品名称："
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical|right"/>


            <TextView android:layout_width="0dp"
                      android:layout_height="match_parent"
                      app:layout_constraintLeft_toRightOf="@id/title2"
                      app:layout_constraintRight_toRightOf="parent"
                      android:textColor="@color/color999"
                      android:gravity="center_vertical"
                      android:text="浴缸"
                      android:textSize="13sp"
                      android:background="@null"/>
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/colorFFE"
                  app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:id="@+id/item3"
                app:layout_constraintTop_toBottomOf="@id/item2"
                android:layout_width="match_parent"
                android:layout_height="44dp">

            <TextView
                    android:id="@+id/title3"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="品类："
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical|right"/>

            <EditText android:layout_width="196dp"
                      android:layout_height="29dp"
                      android:background="@drawable/labels_bac_d"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintLeft_toRightOf="@id/title3"
                      android:textColor="@color/black"
                      android:textSize="13sp"
            />
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/colorFFE"
                  app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:id="@+id/item4"
                app:layout_constraintTop_toBottomOf="@id/item3"
                android:layout_width="match_parent"
                android:layout_height="44dp">

            <TextView
                    android:id="@+id/title4"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="规格："
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical|right"/>


            <EditText android:layout_width="196dp"
                      android:layout_height="29dp"
                      android:background="@drawable/labels_bac_d"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintLeft_toRightOf="@id/title4"
                      android:textColor="@color/black"
                      android:textSize="13sp"
            />
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/colorFFE"
                  app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:id="@+id/item5"
                app:layout_constraintTop_toBottomOf="@id/item4"
                android:layout_width="match_parent"
                android:layout_height="44dp">

            <TextView
                    android:id="@+id/title5"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="型号："
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical|right"/>


            <EditText android:layout_width="196dp"
                      android:layout_height="29dp"
                      android:background="@drawable/labels_bac_d"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintLeft_toRightOf="@id/title5"
                      android:textColor="@color/black"
                      android:textSize="13sp"
            />
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/colorFFE"
                  app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:id="@+id/item6"
                app:layout_constraintTop_toBottomOf="@id/item5"
                android:layout_width="match_parent"
                android:layout_height="44dp">

            <TextView
                    android:id="@+id/title6"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="材质："
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical|right"/>

            <EditText
                    android:id="@+id/area"
                    android:layout_width="196dp"
                    android:layout_height="29dp"
                    android:background="@drawable/labels_bac_d"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toRightOf="@id/title6"
            />

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/colorFFE"
                  app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:id="@+id/item7"
                app:layout_constraintTop_toBottomOf="@id/item6"
                android:layout_width="match_parent"
                android:layout_height="44dp">

            <TextView
                    android:id="@+id/title7"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="产地："
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical|right"/>


            <EditText
                    android:id="@+id/tarea"
                    android:layout_width="196dp"
                    android:layout_height="29dp"
                    android:background="@drawable/labels_bac_d"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/title7"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:padding="5dp"
            />

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/colorFFE"
                  app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
                android:id="@+id/item8"
                app:layout_constraintTop_toBottomOf="@id/item7"
                android:layout_width="match_parent"
                android:layout_height="44dp">

            <TextView
                    android:id="@+id/title8"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="数量："
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical|right"/>


            <EditText
                    android:id="@+id/number"
                    android:layout_width="196dp"
                    android:layout_height="29dp"
                    android:background="@drawable/labels_bac_d"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/title8"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:padding="5dp"
            />

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/colorFFE"
                  app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:id="@+id/item9"
                app:layout_constraintTop_toBottomOf="@id/item8"
                android:layout_width="match_parent"
                android:layout_height="44dp">

            <TextView
                    android:id="@+id/title9"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="保修期/天："
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical|right"/>


            <EditText
                    android:id="@+id/ensure"
                    android:layout_width="196dp"
                    android:layout_height="29dp"
                    android:background="@drawable/labels_bac_d"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/title9"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:padding="5dp"
            />

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/colorFFE"
                  app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
                android:id="@+id/item10"
                app:layout_constraintTop_toBottomOf="@id/item9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

            <TextView
                    android:id="@+id/title10"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="保修期备注："
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical|right"/>

            <EditText android:layout_width="244dp"
                      android:layout_height="67dp"
                      app:layout_constraintLeft_toRightOf="@id/title10"
                      android:textColor="@color/black"
                      android:padding="5dp"
                      android:background="@drawable/labels_bac_d"
                      android:textSize="13sp"/>
        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
                android:id="@+id/item11"
                app:layout_constraintTop_toBottomOf="@id/item10"
                android:layout_width="match_parent"
                android:layout_height="44dp">

            <TextView
                    android:id="@+id/title11"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="加工周期/天："
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical|right"/>


            <EditText
                    android:id="@+id/period"
                    android:layout_width="196dp"
                    android:layout_height="29dp"
                    android:background="@drawable/labels_bac_d"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/title11"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:padding="5dp"
            />

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/colorFFE"
                  app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
                android:id="@+id/item12"
                app:layout_constraintTop_toBottomOf="@id/item11"
                android:layout_width="match_parent"
                android:layout_height="44dp">

            <TextView
                    android:id="@+id/title12"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="收获日期："
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical|right"/>


            <TextView android:layout_width="0dp"
                      android:layout_height="match_parent"
                      app:layout_constraintLeft_toRightOf="@id/title12"
                      app:layout_constraintRight_toRightOf="parent"
                      android:textColor="@color/color999"
                      android:gravity="center_vertical"
                      android:text="点击设置日期"
                      android:textSize="13sp"
                      android:background="@null"/>
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/colorFFE"
                  app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>

        <RadioButton android:layout_width="match_parent"
                     android:layout_height="49dp"
                     android:background="@drawable/labels_button_s"
                     android:button="@null"
                     android:layout_marginLeft="12dp"
                     android:layout_marginRight="12dp"
                     android:text="保存"
                     android:gravity="center"
                     android:textColor="@color/white"
                     app:layout_constraintTop_toBottomOf="@id/item12"
                     android:layout_marginTop="54dp"/>


    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>