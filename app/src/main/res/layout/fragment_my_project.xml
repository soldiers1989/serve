<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <View
            android:id="@+id/vvImmersionView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/color366"
            app:layout_constraintTop_toTopOf="parent"/>

    <include
            android:id="@+id/baseTitle"
            layout="@layout/layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/vvImmersionView"/>
    <android.support.constraint.ConstraintLayout
            android:id="@+id/selectCL"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/baseTitle">

        <TextView
                android:id="@+id/cityTV"
                android:layout_width="81dp"
                android:layout_height="26dp"
                android:padding="5dp"
                android:drawableLeft="@mipmap/location_icon"
                android:drawableRight="@mipmap/down_icon"
                android:background="@drawable/rectangle_side"
                android:text="北京"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/color555"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />
        <TextView
                android:id="@+id/filtrateTV"
                android:layout_width="53dp"
                android:layout_height="26dp"
                android:background="@drawable/rectangle_side"
                android:text="筛选"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/color555"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />

        <TextView android:layout_width="0dp"
                  android:layout_height="26dp"
                  android:background="@drawable/rectangle_side"
                  android:drawableLeft="@mipmap/search_icon"
                  android:paddingLeft="10dp"
                  android:gravity="center"
                  android:textSize="12sp"
                  android:textColor="@color/color555"
                  app:layout_constraintRight_toLeftOf="@id/filtrateTV"
                  app:layout_constraintLeft_toRightOf="@id/cityTV"
                  android:layout_marginLeft="5dp"
                  android:layout_marginRight="5dp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>


    <android.support.v7.widget.RecyclerView
            android:id="@+id/projetRV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/selectCL"
            app:layout_constraintBottom_toBottomOf="parent"
    >

    </android.support.v7.widget.RecyclerView>


    <LinearLayout
            android:id="@+id/labelsLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/selectCL"
            android:background="@color/white">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="量房"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />

        <android.support.v7.widget.RecyclerView
                android:id="@+id/selectRV1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="android.support.v7.widget.GridLayoutManager"
                app:spanCount="4"
        >

        </android.support.v7.widget.RecyclerView>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预交底"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />
        <android.support.v7.widget.RecyclerView
                android:id="@+id/selectRV2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="android.support.v7.widget.GridLayoutManager"
                app:spanCount="4"
        >

        </android.support.v7.widget.RecyclerView>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="施工"
                android:textSize="15sp"
                android:textColor="@color/black"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <android.support.v7.widget.RecyclerView
                android:id="@+id/selectRV3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="android.support.v7.widget.GridLayoutManager"
                app:spanCount="4"
        >

        </android.support.v7.widget.RecyclerView>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">

            <RadioButton
                    android:id="@+id/reset"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/labels_button_d"
                    android:layout_marginLeft="10dp"
                    android:text="重置"
                    android:gravity="center"
                    android:checked="true"
                    android:button="@null"
                    android:textSize="21sp"
                    android:textColor="@color/white"
                    android:layout_height="44dp"/>
            <RadioButton
                    android:id="@+id/confirm"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:background="@drawable/labels_button_s"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/confirm"
                    android:gravity="center"
                    android:checked="true"
                    android:button="@null"
                    android:textSize="21sp"
                    android:textColor="@color/white"
                    android:layout_height="44dp"/>

        </LinearLayout>
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/locationCL"
            android:layout_width="match_parent"
            android:layout_height="404dp"
            app:layout_constraintTop_toBottomOf="@id/selectCL"
            android:visibility="gone"
            android:background="@color/white">
        <android.support.v7.widget.RecyclerView
                android:id="@+id/province"
                android:layout_width="126dp"
                android:layout_height="match_parent"
                android:background="#FFF8F8F8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager">

        </android.support.v7.widget.RecyclerView>
        <android.support.v7.widget.RecyclerView
                android:id="@+id/city"
                android:layout_width="126dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/reset2"
                app:layout_constraintLeft_toRightOf="@id/province"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager">

        </android.support.v7.widget.RecyclerView>


        <RadioButton
                android:id="@+id/reset2"
                android:layout_width="107dp"
                android:layout_weight="1"
                android:background="@drawable/labels_button_d"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/confirm2"
                android:text="重置"
                android:gravity="center"
                android:checked="true"
                android:button="@null"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_height="36dp"/>
        <RadioButton
                android:id="@+id/confirm2"
                android:layout_width="107dp"
                android:layout_weight="2"
                android:background="@drawable/labels_button_s"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/confirm"
                android:gravity="center"
                android:checked="true"
                android:button="@null"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_height="36dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>