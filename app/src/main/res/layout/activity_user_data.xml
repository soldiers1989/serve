<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="16dp">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/color333"
                  android:textSize="14sp"
                  android:text="头像"
                  android:layout_marginLeft="13dp"
                  app:layout_constraintTop_toTopOf="@id/userHeadIV"
                  app:layout_constraintBottom_toBottomOf="@id/userHeadIV"
                  app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageView
                android:id="@+id/userHeadIV"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:src="@mipmap/user_icon_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="13dp"
        />


        <View
                android:id="@+id/fg1V"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorD8D"
                app:layout_constraintTop_toBottomOf="@id/userHeadIV"
                android:layout_marginTop="16dp"/>
        <android.support.constraint.ConstraintLayout
                android:id="@+id/item1CL"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                app:layout_constraintTop_toBottomOf="@id/fg1V">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/color333"
                      android:textSize="14sp"
                      android:text="姓名"
                      android:layout_marginLeft="13dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintLeft_toLeftOf="parent"/>
