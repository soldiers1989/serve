<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <ImageView
            android:id="@+id/proIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/progress_icon_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
    />
    <TextView
            android:id="@+id/proTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/proIcon"
            app:layout_constraintLeft_toLeftOf="@id/proIcon"
            app:layout_constraintRight_toRightOf="@id/proIcon"
            android:text="量房"
            android:textSize="9sp"
            android:layout_marginTop="5dp"/>
    <View
            android:id="@+id/fg"
            android:layout_width="34dp"
            android:layout_height="2dp"
            app:layout_constraintTop_toTopOf="@id/proIcon"
            app:layout_constraintBottom_toBottomOf="@id/proIcon"
            app:layout_constraintLeft_toRightOf="@id/proIcon"
            android:background="@color/color366"
            android:layout_marginLeft="5dp"
    />

</android.support.constraint.ConstraintLayout>