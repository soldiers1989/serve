<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView android:layout_width="match_parent"
              android:layout_height="63dp"
              android:background="@color/white"
              android:text="北京市朝阳区望京体育公园路南1号望京西园3号楼1单元1302"
              android:textColor="@color/color333"
              android:paddingLeft="21dp"
              android:paddingRight="11dp"
              android:gravity="center_vertical"
              android:drawableRight="@mipmap/location_icon"
              android:textSize="13sp"/>
    <View android:layout_width="match_parent"
          android:layout_height="10dp"
          android:background="@color/colorDFD"
    />

    <android.support.v7.widget.CardView
            android:id="@+id/tabCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="6dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/white">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
        >
            <TextView
                    android:id="@+id/item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="开工交底"
                    android:textColor="@color/black"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="12sp"
                      android:text="已完成"
                      android:textColor="@color/black"
                      app:layout_constraintBaseline_toBaselineOf="@id/item1"
                      app:layout_constraintRight_toRightOf="parent"
            />
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/colorF1F"
                  app:layout_constraintTop_toBottomOf="@id/item1"
                  android:layout_marginTop="5dp"
            />
            <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/item1"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager">
            </android.support.v7.widget.RecyclerView>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
            android:id="@+id/tabCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="6dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/white">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
        >
            <TextView
                    android:id="@+id/item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="开工交底"
                    android:textColor="@color/black"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="12sp"
                      android:text="已完成"
                      android:textColor="@color/black"
                      app:layout_constraintBaseline_toBaselineOf="@id/item1"
                      app:layout_constraintRight_toRightOf="parent"
            />
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/colorF1F"
                  app:layout_constraintTop_toBottomOf="@id/item1"
                  android:layout_marginTop="5dp"
            />
            <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/item1"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager">
            </android.support.v7.widget.RecyclerView>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:id="@+id/tabCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="6dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/white">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
        >
            <TextView
                    android:id="@+id/item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="开工交底"
                    android:textColor="@color/black"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="12sp"
                      android:text="已完成"
                      android:textColor="@color/black"
                      app:layout_constraintBaseline_toBaselineOf="@id/item1"
                      app:layout_constraintRight_toRightOf="parent"
            />
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/colorF1F"
                  app:layout_constraintTop_toBottomOf="@id/item1"
                  android:layout_marginTop="5dp"
            />
            <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/item1"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager">
            </android.support.v7.widget.RecyclerView>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>