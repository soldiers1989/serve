<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="177dp">


    <TextView
            android:id="@+id/consigneeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color333"
            android:layout_marginLeft="13dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="收货人"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
            android:id="@+id/phoneTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color333"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="13333333333"
            android:layout_marginRight="13dp"
            android:layout_marginTop="24dp"
            app:layout_constraintBaseline_toBaselineOf="@id/consigneeTV"
            app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
            android:id="@+id/addressIV"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/location"
            android:layout_marginLeft="13dp"
            app:layout_constraintTop_toBottomOf="@id/consigneeTV"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="38dp"/>
    <TextView
            android:id="@+id/addressTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color333"
            android:textSize="14sp"
            android:layout_marginLeft="12dp"
            app:layout_constraintLeft_toRightOf="@id/addressIV"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="13dp"
            android:text="收货人收货人收货人收货人收货人收货人收货人收货人收货人收货人"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@id/consigneeTV"/>

    <RadioButton
            android:id="@+id/addressSelectTV"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:button="@null"
            android:checked="true"
            android:layout_marginLeft="13dp"
            android:background="@drawable/rb_address_select"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="32dp"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="12sp"
              android:text="默认地址"
              android:textColor="@color/color666"
              android:layout_marginLeft="12dp"
              app:layout_constraintLeft_toRightOf="@id/addressSelectTV"
              app:layout_constraintTop_toTopOf="@id/addressSelectTV"
              app:layout_constraintBottom_toBottomOf="@id/addressSelectTV"/>
    <ImageView
            android:id="@+id/deleteIV"
            android:layout_width="12dp"
            android:layout_height="14dp"
            android:button="@null"
            android:background="@mipmap/record_clean"
            app:layout_constraintRight_toLeftOf="@+id/deleteTV"
            app:layout_constraintTop_toTopOf="@id/addressSelectTV"
            app:layout_constraintBottom_toBottomOf="@id/addressSelectTV"
            android:layout_marginRight="10dp"
    />
    <TextView
            android:id="@+id/deleteTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="删除"
            android:textColor="@color/color666"
            android:layout_marginRight="13dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/addressSelectTV"
            app:layout_constraintBottom_toBottomOf="@id/addressSelectTV"/>


    <ImageView
            android:id="@+id/redactIV"
            android:layout_width="12dp"
            android:layout_height="14dp"
            android:button="@null"
            android:background="@mipmap/redact_icon"
            app:layout_constraintRight_toLeftOf="@+id/redactTV"
            app:layout_constraintTop_toTopOf="@id/addressSelectTV"
            app:layout_constraintBottom_toBottomOf="@id/addressSelectTV"
            android:layout_marginRight="10dp"
    />
    <TextView
            android:id="@+id/redactTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="编辑"
            android:textColor="@color/color666"
            android:layout_marginRight="46dp"
            app:layout_constraintRight_toLeftOf="@id/deleteIV"
            app:layout_constraintTop_toTopOf="@id/addressSelectTV"
            app:layout_constraintBottom_toBottomOf="@id/addressSelectTV"/>

    <View
            android:id="@+id/fgV"
            android:layout_width="match_parent"
          android:layout_height="10dp"
          android:background="@color/colorF1F"
          app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>