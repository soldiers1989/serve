<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bac_fff85636_2"
        android:layout_marginTop="10dp"
>

    <TextView
            android:id="@+id/customerTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题1"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:id="@+id/stateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待处理"
            android:textColor="#FFF85636"
            android:textSize="11sp"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />
    <View
            android:id="@+id/fgV"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorFFE"
            app:layout_constraintTop_toBottomOf="@id/customerTV"
            android:layout_marginTop="5dp"/>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/issueRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fgV"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager">

    </android.support.v7.widget.RecyclerView>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:text="处理完成"
            android:background="@drawable/bac_fff85636"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/issueRV"

    />
</android.support.constraint.ConstraintLayout>