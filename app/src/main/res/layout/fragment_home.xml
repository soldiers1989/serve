<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <android.support.v4.widget.NestedScrollView
            android:id="@+id/homeSV"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/locationIV"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="194dp"
                    android:background="@mipmap/home_top_bac"/>
            <android.support.v7.widget.CardView
                    android:id="@+id/statisticsCV"
                    android:layout_width="match_parent"
                    android:layout_height="118dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginTop="144dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="6dp"
                    app:layout_constraintTop_toTopOf="parent">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:orientation="vertical"
                              android:gravity="center_horizontal">
                    <android.support.v7.widget.RecyclerView
                            android:id="@+id/statisticsRV1"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:orientation="horizontal"
                            app:layoutManager="android.support.v7.widget.LinearLayoutManager">
                    </android.support.v7.widget.RecyclerView>
                    <View android:layout_width="match_parent"
                          android:layout_height="1dp"
                          android:background="@color/colorFFE"/>
                    <android.support.v7.widget.RecyclerView
                            android:id="@+id/statisticsRV2"
                            android:layout_width="match_parent"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_height="64dp"
                            android:orientation="horizontal"
                            app:layoutManager="android.support.v7.widget.LinearLayoutManager">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                    android:id="@+id/messageTV"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:paddingLeft="27dp"
                    android:layout_marginTop="17dp"
                    android:text="消息：XX客户已确认量房时间（2019-07-01）"
                    android:drawableLeft="@mipmap/message_hint_icon"
                    android:drawablePadding="5dp"
                    android:textColor="@color/color333"
                    android:gravity="center_vertical"
                    android:textSize="11sp"
                    android:background="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/statisticsCV"
            />

            <android.support.v7.widget.CardView
                    android:id="@+id/calendarCV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="6dp"
                    app:layout_constraintTop_toBottomOf="@id/messageTV">
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20dp">
                    <View
                            android:id="@+id/bacV"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:background="@color/color366"/>
                    <TextView
                            android:id="@+id/dateTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2019年7月"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginTop="13dp"
                            android:layout_marginLeft="14dp"
                            android:textColor="@color/white"
                            android:textSize="19sp"/>

                    <ImageView
                            android:id="@+id/up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="@id/dateTV"
                            app:layout_constraintBottom_toBottomOf="@id/dateTV"
                            app:layout_constraintLeft_toRightOf="@id/dateTV"
                            android:padding="10dp"
                            android:layout_marginLeft="15dp"
                            android:src="@mipmap/up_icon"
                            android:tint="@color/white"
                    />
                    <ImageView
                            android:id="@+id/down"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="@id/dateTV"
                            app:layout_constraintBottom_toBottomOf="@id/dateTV"
                            app:layout_constraintLeft_toRightOf="@id/up"
                            android:padding="10dp"
                            android:layout_marginLeft="5dp"
                            android:src="@mipmap/down_icon"
                            android:tint="@color/white"
                    />

                    <ImageView
                            android:id="@+id/schedule"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginTop="13dp"
                            android:layout_marginRight="14dp"
                            android:src="@mipmap/schedule_icon"
                    />
                    <ImageView
                            android:id="@+id/add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/schedule"
                            android:layout_marginTop="13dp"
                            android:layout_marginRight="14dp"
                            android:src="@mipmap/add_icon_2"
                    />

                    <LinearLayout
                            android:id="@+id/calendarViewLL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/dateTV">
                        <com.haibin.calendarview.CalendarView
                                android:id="@+id/mCalendarView"
                                android:layout_marginTop="12dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#fff"
                                app:calendar_padding="10dp"
                                app:current_month_lunar_text_color="#CFCFCF"
                                app:current_month_text_color="#333333"
                                app:max_year="2020"
                                app:min_year="2004"
                                app:month_view="com.easyhome.serve.mvp.ui.widget.custom.CustomMonthView"
                                app:month_view_show_mode="mode_fix"
                                app:other_month_lunar_text_color="#e1e1e1"
                                app:other_month_text_color="#e1e1e1"
                                app:scheme_text="假"
                                app:scheme_text_color="#333"
                                app:scheme_theme_color="#128c4b"
                                app:selected_lunar_text_color="#fff"
                                app:selected_text_color="#fff"
                                app:selected_theme_color="@color/color366"
                                app:week_background="@color/color366"
                                app:week_start_with="mon"
                                app:week_text_color="@color/white"
                                app:week_view="com.easyhome.serve.mvp.ui.widget.custom.CustomWeekView"
                                app:year_view="com.easyhome.serve.mvp.ui.widget.custom.CustomYearView"
                                app:year_view_day_text_color="#696969"
                                app:year_view_day_text_size="7sp"
                                app:year_view_month_text_color="#ff0000"
                                app:year_view_month_text_size="20sp"
                                app:year_view_scheme_color="#f17706"
                                app:year_view_select_text_color="#fff"
                                app:year_view_week_height="12dp"
                                app:year_view_week_text_color="#e1e1e1"
                                app:year_view_week_text_size="6sp"/>

                    </LinearLayout>

                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <View
                    android:id="@+id/fgV1"
                    app:layout_constraintTop_toBottomOf="@id/calendarCV"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorFFE"
            />
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/waitCL"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    app:layout_constraintTop_toBottomOf="@id/fgV1"
                    android:background="@color/white"
            >
                <TextView
                        android:id="@+id/itemTV1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/homr_item_title_1"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingLeft="5dp"
                        android:background="@drawable/left_side"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginLeft="12dp"
                />
                <TextView
                        android:id="@+id/itemTV2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color666"
                        android:text="总数10个"
                        app:layout_constraintLeft_toRightOf="@id/itemTV1"
                        app:layout_constraintBottom_toBottomOf="@id/itemTV1"
                        android:layout_marginLeft="12dp"
                        android:paddingLeft="5dp"
                        android:textSize="11sp"
                />
                <TextView
                        android:id="@+id/itemTV3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color666"
                        android:text="未完成2个"
                        app:layout_constraintLeft_toRightOf="@id/itemTV2"
                        app:layout_constraintBottom_toBottomOf="@id/itemTV1"
                        android:layout_marginLeft="12dp"
                        android:paddingLeft="5dp"
                        android:textSize="11sp"
                />
            </android.support.constraint.ConstraintLayout>


            <android.support.v7.widget.RecyclerView
                    android:id="@+id/waitThing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/waitCL"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager">

            </android.support.v7.widget.RecyclerView>

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topCalendar"
            android:visibility="gone">

        <View
                android:id="@+id/topv"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:background="@color/color366"/>


        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="55dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="6dp"
                app:layout_constraintTop_toTopOf="@+id/topv"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"
        >
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
            >

                <android.support.constraint.ConstraintLayout
                        android:id="@+id/dateCL"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        app:layout_constraintTop_toBottomOf="@id/topv"
                        android:background="@color/white">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2019年7月"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginLeft="14dp"
                            android:textColor="@color/black"
                            android:textSize="14sp"/>

                    <ImageView
                            android:id="@+id/schedule2"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginRight="14dp"
                            android:tint="@color/color529"
                            android:src="@mipmap/schedule_icon"/>
                    <ImageView
                            android:id="@+id/add2"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            app:layout_constraintRight_toLeftOf="@+id/schedule2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginRight="14dp"
                            android:tint="@color/color529"
                            android:src="@mipmap/add_icon_2"/>

                </android.support.constraint.ConstraintLayout>
                <com.haibin.calendarview.CalendarLayout
                        android:id="@+id/calendarLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:orientation="vertical"
                        app:calendar_content_view_id="@+id/homeSV"
                        app:calendar_show_mode="only_week_view">
                    <com.haibin.calendarview.CalendarView
                            android:id="@+id/topCV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            app:calendar_padding="10dp"
                            app:current_month_lunar_text_color="#CFCFCF"
                            app:current_month_text_color="#333333"
                            app:max_year="2020"
                            app:min_year="2004"
                            app:month_view="com.easyhome.serve.mvp.ui.widget.custom.CustomMonthView"
                            app:month_view_show_mode="mode_fix"
                            app:other_month_lunar_text_color="#e1e1e1"
                            app:other_month_text_color="#e1e1e1"
                            app:scheme_text="假"
                            app:scheme_text_color="#333"
                            app:scheme_theme_color="#128c4b"
                            app:selected_lunar_text_color="#fff"
                            app:selected_text_color="#fff"
                            app:selected_theme_color="#3669F8"
                            app:week_background="#fff"
                            app:week_start_with="mon"
                            app:week_text_color="#999999"
                            app:week_view="com.easyhome.serve.mvp.ui.widget.custom.CustomWeekView"
                            app:year_view="com.easyhome.serve.mvp.ui.widget.custom.CustomYearView"
                            app:year_view_day_text_color="#333333"
                            app:year_view_day_text_size="7sp"
                            app:year_view_month_text_color="#ff0000"
                            app:year_view_month_text_size="20sp"
                            app:year_view_scheme_color="#f17706"
                            app:year_view_select_text_color="#fff"
                            app:year_view_week_height="12dp"
                            app:year_view_week_text_color="#e1e1e1"
                            app:year_view_week_text_size="6sp"/>
                </com.haibin.calendarview.CalendarLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>