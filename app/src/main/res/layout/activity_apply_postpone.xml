<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/reset">
        <android.support.constraint.ConstraintLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目信息"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>

            <View
                    android:id="@+id/fg"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorFFE"
                    app:layout_constraintTop_toBottomOf="@id/info"
            />


            <TextView
                    android:id="@+id/content1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="客户编号：1234"
                    android:padding="5dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fg"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
            <TextView
                    android:id="@+id/content2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客户姓名：李阳"
                    app:layout_constraintTop_toBottomOf="@id/content1"
                    app:layout_constraintLeft_toLeftOf="@id/content1"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
            <TextView
                    android:id="@+id/content3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客户姓名：李阳"
                    app:layout_constraintTop_toBottomOf="@id/content1"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="10dp"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
            <TextView
                    android:id="@+id/content4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="户型：三室一厅"
                    app:layout_constraintTop_toBottomOf="@id/content2"
                    app:layout_constraintLeft_toLeftOf="@id/content1"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

            <TextView
                    android:id="@+id/content5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建筑面积：100.09m2"
                    app:layout_constraintTop_toBottomOf="@id/content2"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="10dp"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
            <TextView
                    android:id="@+id/content6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="项目地址：北京市西城区车公庄大街9号院锦官苑院1号楼"
                    app:layout_constraintTop_toBottomOf="@id/content4"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="@+id/content1"
                    android:layout_marginRight="10dp"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>


            <View
                    android:id="@+id/fg1"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    app:layout_constraintTop_toBottomOf="@id/content6"
                    android:background="@color/colorFFE"
                    android:layout_marginTop="10dp"/>


            <TextView
                    android:id="@+id/postpone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="延期信息"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fg1"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>

            <View
                    android:id="@+id/fg2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/postpone"
                    android:background="@color/colorFFE"
            />

            <TextView
                    android:id="@+id/poscontent1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="延期申请编号：1234"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fg2"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

            <View
                    android:id="@+id/fg3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/poscontent1"
                    android:background="@color/colorFFE"/>


            <TextView
                    android:id="@+id/poscontent2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计划施工日期：2019-05-12  ~  2019-05-22"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fg3"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

            <View
                    android:id="@+id/fg4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/poscontent2"
                    android:background="@color/colorFFE"/>


            <TextView
                    android:id="@+id/poscontent3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fg4"
                    android:visibility="gone"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

            <View
                    android:id="@+id/fg5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/poscontent3"
                    android:background="@color/colorFFE"/>

            <TextView
                    android:id="@+id/poscontent4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="延期开始日期：点击设置日期"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fg5"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

            <TextView
                    android:id="@+id/poscontent5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击设置日期"
                    android:visibility="gone"
                    app:layout_constraintLeft_toRightOf="@id/poscontent4"
                    app:layout_constraintBaseline_toBaselineOf="@id/poscontent4"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/color666"/>
            <View
                    android:id="@+id/fg6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/poscontent4"
                    android:background="@color/colorFFE"/>


            <TextView
                    android:id="@+id/poscontent6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="延长时间："
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fg6"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

            <EditText
                    android:id="@+id/duration"
                    android:layout_width="90dp"
                    android:layout_height="26dp"
                    android:textSize="12sp"
                    android:paddingLeft="5dp"
                    app:layout_constraintTop_toTopOf="@id/poscontent6"
                    app:layout_constraintBottom_toBottomOf="@id/poscontent6"
                    app:layout_constraintLeft_toRightOf="@id/poscontent6"
                    android:background="@drawable/labels_bac_d"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天"
                    app:layout_constraintLeft_toRightOf="@id/duration"
                    app:layout_constraintBaseline_toBaselineOf="@id/poscontent6"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
            <View
                    android:id="@+id/fg7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/poscontent6"
                    android:background="@color/colorFFE"/>


            <TextView
                    android:id="@+id/poscontent7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="延期原因："
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fg7"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

            <TextView
                    android:id="@+id/poscontent8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击选择原因"
                    app:layout_constraintLeft_toRightOf="@id/poscontent7"
                    app:layout_constraintBaseline_toBaselineOf="@id/poscontent7"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/color777"/>
            <View
                    android:id="@+id/fg8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/poscontent7"
                    android:background="@color/colorFFE"/>


            <TextView
                    android:id="@+id/poscontent9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注："
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fg8"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

            <EditText
                    android:id="@+id/cause"
                    android:layout_width="0dp"
                    android:layout_height="67dp"
                    app:layout_constraintTop_toTopOf="@id/poscontent9"
                    app:layout_constraintLeft_toRightOf="@id/poscontent9"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:hint="请输入备注内容"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:padding="5dp"
                    android:background="@drawable/labels_bac_d"/>

            <View
                    android:id="@+id/fg9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/cause"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorFFE"/>

            <TextView
                    android:id="@+id/poscontent10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="延期节点："
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fg9"
                    android:padding="13dp"
                    android:textSize="13sp"
                    android:textColor="@color/black"/>


            <android.support.v7.widget.RecyclerView
                    android:id="@+id/nodeRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/poscontent10">

            </android.support.v7.widget.RecyclerView>

            <View
                    android:id="@+id/fg10"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/nodeRV"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorFFE"/>
            <TextView
                    android:id="@+id/poscontent11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="延期申请单："
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fg10"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/photoRV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layoutManager="android.support.v7.widget.GridLayoutManager"
                    app:spanCount="3"
                    android:layout_marginTop="10dp"
                    app:layout_constraintLeft_toRightOf="@id/poscontent11"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fg10">

            </android.support.v7.widget.RecyclerView>

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

    <RadioButton
            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:background="@drawable/labels_button_s"
            android:layout_marginRight="10dp"
            android:text="提交"
            android:gravity="center"
            android:checked="true"
            android:button="@null"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_height="49dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
    />
</android.support.constraint.ConstraintLayout>
