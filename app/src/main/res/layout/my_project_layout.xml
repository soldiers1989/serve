    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/extensively_bac"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:padding="10dp">
        <TextView
                android:id="@+id/locationTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户编号：1234"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
                android:id="@+id/projectStateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待量房"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        <View
                android:id="@+id/fgV1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorFFE"
                app:layout_constraintTop_toBottomOf="@id/locationTV"
                android:layout_marginTop="12dp"/>

        <TextView
                android:id="@+id/nameTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="项目地址：北京市海淀区上地东路恒大城五号院号楼三单元12703"
                android:gravity="left"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fgV1"
                app:layout_constraintRight_toLeftOf="@id/locationIV"
                android:layout_marginTop="10dp"/>
        <ImageView
                android:id="@+id/locationIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/location_icon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fgV1"
                android:layout_marginTop="10dp"/>
        <ImageView
                android:id="@+id/coverIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/example_icon_1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nameTV"
                android:layout_marginTop="10dp"
        />

        <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王先生"
                android:gravity="left|center"
                android:drawableRight="@mipmap/phone_icon"
                android:drawablePadding="5dp"
                android:textColor="@color/color888"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="@id/coverIV"
                app:layout_constraintLeft_toRightOf="@id/coverIV"
                android:layout_marginLeft="10dp"
        />
        <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="丽泽桥店"
                android:gravity="left"
                android:textColor="@color/color888"
                android:textSize="12sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/name"
                app:layout_constraintLeft_toRightOf="@id/name"
                android:layout_marginLeft="10dp"
        />
        <TextView
                android:layout_width="47dp"
                android:layout_height="17dp"
                android:text="项目经理"
                android:gravity="center"
                android:textColor="@color/color888"
                android:background="@drawable/tag_bac_side"
                android:textSize="9sp"
                android:visibility="gone"
                app:layout_constraintBaseline_toBaselineOf="@+id/name"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="10dp"
        />


