                      android:layout_height="wrap_content"
                      android:textColor="@color/color333"
                      android:textSize="14sp"
                      android:text="张狗蛋"
                      android:layout_marginRight="13dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintRight_toRightOf="parent"/>

        </android.support.constraint.ConstraintLayout>


        <View
                android:id="@+id/fg2V"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorD8D"
                app:layout_constraintTop_toBottomOf="@id/item1CL"
        />

        <android.support.constraint.ConstraintLayout
                android:id="@+id/item2CL"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                app:layout_constraintTop_toBottomOf="@id/fg2V">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/color333"
                      android:textSize="14sp"
                      android:text="手机号"
                      android:layout_marginLeft="13dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/color333"
                      android:textSize="14sp"
                      android:text="13691345442"
                      android:layout_marginRight="13dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintRight_toRightOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <View
                android:id="@+id/fg3V"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorD8D"
                app:layout_constraintTop_toBottomOf="@id/item2CL"/>
        <android.support.constraint.ConstraintLayout
                android:id="@+id/item3CL"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                app:layout_constraintTop_toBottomOf="@id/fg3V">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/color333"
                      android:textSize="14sp"
                      android:text="性别"
                      android:layout_marginLeft="13dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/color333"
                      android:textSize="14sp"
                      android:text="男"
                      android:layout_marginRight="13dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintRight_toRightOf="parent"/>

        </android.support.constraint.ConstraintLayout>
        <View
                android:id="@+id/fg4V"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorD8D"
                app:layout_constraintTop_toBottomOf="@id/item3CL"/>
        <android.support.constraint.ConstraintLayout
                android:id="@+id/item4CL"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                app:layout_constraintTop_toBottomOf="@id/fg4V">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/color333"
                      android:textSize="14sp"
                      android:text="工号"
                      android:layout_marginLeft="13dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/color333"
                      android:textSize="14sp"
                      android:text="女"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      android:layout_marginRight="13dp"
            />

        </android.support.constraint.ConstraintLayout>
        <View
                android:id="@+id/fg5V"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorD8D"
                app:layout_constraintTop_toBottomOf="@id/item4CL"/>
        <android.support.constraint.ConstraintLayout
                android:id="@+id/item5CL"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                app:layout_constraintTop_toBottomOf="@id/fg5V">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/color333"
                      android:textSize="14sp"
                      android:text="所在门店"
                      android:layout_marginLeft="13dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/color333"
                      android:textSize="14sp"
                      android:text="丽泽桥店"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      android:layout_marginRight="13dp"
            />


        </android.support.constraint.ConstraintLayout>


        <View
                android:id="@+id/fg6V"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorD8D"
                app:layout_constraintTop_toBottomOf="@id/item5CL"/>
        <android.support.constraint.ConstraintLayout
                android:id="@+id/item6CL"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                app:layout_constraintTop_toBottomOf="@id/fg6V">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/color333"
                      android:textSize="14sp"
                      android:text="职位"
                      android:layout_marginLeft="13dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/color333"
                      android:textSize="14sp"
                      android:text="设计师"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      android:layout_marginRight="13dp"/>


        </android.support.constraint.ConstraintLayout>

        <View
                android:id="@+id/fg7V"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorD8D"
                app:layout_constraintTop_toBottomOf="@id/item6CL"/>
        <android.support.constraint.ConstraintLayout
                android:id="@+id/item7CL"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                app:layout_constraintTop_toBottomOf="@id/fg7V">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/color333"
                      android:textSize="14sp"
                      android:text="级别"
                      android:layout_marginLeft="13dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/color333"
                      android:textSize="14sp"
                      android:text="资深设计师"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      android:layout_marginRight="13dp"/>


        </android.support.constraint.ConstraintLayout>
        <View
                android:id="@+id/fg8V"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorD8D"
                app:layout_constraintTop_toBottomOf="@id/item7CL"/>

        <android.support.constraint.ConstraintLayout
                android:id="@+id/item8CL"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                app:layout_constraintTop_toBottomOf="@id/fg8V">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/color333"
                      android:textSize="14sp"
                      android:text="工作室"
                      android:layout_marginLeft="13dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/color333"
                      android:textSize="14sp"
                      android:text="XX设计工作室"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      android:layout_marginRight="13dp"/>

        </android.support.constraint.ConstraintLayout>
        <View
                android:id="@+id/fg9V"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorD8D"
                app:layout_constraintTop_toBottomOf="@id/item8CL"/>

        <RadioButton android:layout_width="match_parent"
                     android:layout_height="49dp"
                     android:background="@drawable/login_rb_bg_checked"
                     android:button="@null"
                     android:text="保存"
                     android:gravity="center"
                     android:textColor="@color/white"
                     app:layout_constraintLeft_toLeftOf="parent"
                     app:layout_constraintRight_toRightOf="parent"
                     android:layout_marginLeft="13dp"
                     android:layout_marginRight="13dp"
                     app:layout_constraintTop_toBottomOf="@id/fg9V"
                     android:layout_marginTop="54dp"
        />
    </android.support.constraint.ConstraintLayout>
</ScrollView>