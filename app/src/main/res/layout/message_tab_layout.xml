<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

    <View android:layout_width="1dp"
          android:layout_height="16dp"
          android:background="@color/color366"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:visibility="gone"
    />

    <TextView
            android:id="@+id/tabB"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="全部"
            android:button="@null"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:drawablePadding="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@drawable/message_tab_text"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorD8D"
            app:layout_constraintBottom_toBottomOf="@id/mark"
            app:layout_constraintTop_toTopOf="@id/mark"
    />
    <ImageView
            android:id="@+id/mark"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />

    <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:textColor="@color/white"
            android:background="@drawable/dot_red"
            app:layout_constraintTop_toTopOf="@id/tabB"
            app:layout_constraintRight_toRightOf="@id/tabB"
            android:visibility="gone"
            android:padding="2dp"
            android:textSize="7sp"
            android:text="111"/>

    <View
            android:id="@+id/verticalLine"
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="@color/color366"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />

</android.support.constraint.ConstraintLayout>