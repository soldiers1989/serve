<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:background="@drawable/left_side"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:padding="10dp">

    <ImageView
            android:id="@+id/brandIcon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="12dp"
            app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品编号：12342"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="12dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <View
            android:id="@+id/fgV"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorFFE"
            app:layout_constraintTop_toBottomOf="@id/edit"
            android:layout_marginTop="10dp"/>


    <TextView
            android:id="@+id/nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 欧派 | 北京某某欧派供应商公司"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:textSize="12sp"
            android:textColor="@color/color555"
            app:layout_constraintLeft_toRightOf="@id/brandIcon"
            android:layout_marginRight="11dp"
            app:layout_constraintTop_toTopOf="@id/brandIcon"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 10*20*30 | xhahha | 美国 \n 保修期365天 | 加工19天 \n 收货日期：2019-07-30 "
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:textSize="11sp"
            android:textColor="@color/color555"
            app:layout_constraintLeft_toRightOf="@id/brandIcon"
            android:layout_marginRight="12dp"
            app:layout_constraintBottom_toBottomOf="@id/brandIcon"/>

</android.support.constraint.ConstraintLayout>