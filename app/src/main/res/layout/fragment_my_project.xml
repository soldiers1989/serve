<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <View
            android:id="@+id/vvImmersionView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/color366"
            app:layout_constraintTop_toTopOf="parent"/>

    <include
            android:id="@+id/baseTitle"
            layout="@layout/layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/vvImmersionView"/>
    <android.support.constraint.ConstraintLayout
            android:id="@+id/selectCL"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/baseTitle">

        <TextView
                android:id="@+id/cityTV"
                android:layout_width="81dp"
                android:layout_height="26dp"
                android:drawableLeft="@mipmap/location_icon"
                android:drawableRight="@mipmap/down"
                android:background="@drawable/rectangle_side"
                android:text="北京"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/color555"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />
        <TextView
                android:id="@+id/filtrateTV"
                android:layout_width="53dp"
                android:layout_height="26dp"
                android:background="@drawable/rectangle_side"
                android:text="筛选"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/color555"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />

        <TextView android:layout_width="0dp"
                  android:layout_height="26dp"
                  android:background="@drawable/rectangle_side"
                  android:drawableLeft="@mipmap/search_icon"
                  android:paddingLeft="10dp"
                  android:gravity="center"
                  android:textSize="12sp"
                  android:textColor="@color/color555"
                  app:layout_constraintRight_toLeftOf="@id/filtrateTV"
                  app:layout_constraintLeft_toRightOf="@id/cityTV"
                  android:layout_marginLeft="5dp"
                  android:layout_marginRight="5dp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>


    <android.support.v7.widget.RecyclerView
            android:id="@+id/projetRV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/selectCL"
            app:layout_constraintBottom_toBottomOf="parent"
    >

    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>