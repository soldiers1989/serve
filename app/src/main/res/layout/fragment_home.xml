<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
            android:id="@+id/homeSV"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/locationIV"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="194dp"
                    android:background="@mipmap/home_top_bac"/>
            <android.support.v7.widget.CardView
                    android:id="@+id/statisticsCV"
                    android:layout_width="match_parent"
                    android:layout_height="118dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginTop="144dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="6dp"
                    app:layout_constraintTop_toTopOf="parent">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:orientation="vertical"
                              android:gravity="center_horizontal">
                    <android.support.v7.widget.RecyclerView
                            android:id="@+id/statisticsRV1"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:orientation="horizontal"
                            app:layoutManager="android.support.v7.widget.LinearLayoutManager">
                    </android.support.v7.widget.RecyclerView>
                    <View android:layout_width="match_parent"
                          android:layout_height="1dp"
                          android:background="@color/colorFFE"/>
                    <android.support.v7.widget.RecyclerView
                            android:id="@+id/statisticsRV2"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:orientation="horizontal"
                            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    >
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                    android:id="@+id/messageTV"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:paddingLeft="27dp"
                    android:layout_marginTop="17dp"
                    android:text="消息消息消息消息消息"
                    android:textColor="@color/color333"
                    android:gravity="center_vertical"
                    android:textSize="11sp"
                    android:background="#1A080103"
                    app:layout_constraintTop_toBottomOf="@id/statisticsCV"
            />

            <android.support.v7.widget.CardView
                    android:id="@+id/calendarCV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="6dp"
                    app:layout_constraintTop_toBottomOf="@id/messageTV">
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20dp">
                    <View android:layout_width="match_parent"
                          android:layout_height="76dp"
                          android:background="@color/color366"/>
                    <TextView
                            android:id="@+id/dateTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2019年7月"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginTop="13dp"
                            android:layout_marginLeft="14dp"
                            android:textColor="@color/white"
                            android:textSize="19sp"
                    />

                    <com.haibin.calendarview.CalendarView
                            android:id="@+id/mCalendarView"
                            app:layout_constraintTop_toBottomOf="@id/dateTV"
                            android:layout_marginTop="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            app:calendar_padding="10dp"
                            app:current_month_lunar_text_color="#CFCFCF"
                            app:current_month_text_color="#333333"
                            app:max_year="2020"
                            app:min_year="2004"
                            app:month_view="com.easyhome.serve.mvp.ui.widget.custom.CustomMonthView"
                            app:month_view_show_mode="mode_fix"
                            app:other_month_lunar_text_color="#e1e1e1"
                            app:other_month_text_color="#e1e1e1"
                            app:scheme_text="假"
                            app:scheme_text_color="#333"
                            app:scheme_theme_color="#128c4b"
                            app:selected_lunar_text_color="#fff"
                            app:selected_text_color="#fff"
                            app:selected_theme_color="#08aefc"
                            app:week_background="#fff"
                            app:week_start_with="sun"
                            app:week_text_color="#999999"
                            app:week_view="com.easyhome.serve.mvp.ui.widget.custom.CustomWeekView"
                            app:year_view="com.easyhome.serve.mvp.ui.widget.custom.CustomYearView"
                            app:year_view_day_text_color="#333333"
                            app:year_view_day_text_size="7sp"
                            app:year_view_month_text_color="#ff0000"
                            app:year_view_month_text_size="20sp"
                            app:year_view_scheme_color="#f17706"
                            app:year_view_select_text_color="#fff"
                            app:year_view_week_height="12dp"
                            app:year_view_week_text_color="#e1e1e1"
                            app:year_view_week_text_size="6sp"/>

                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <View
                    android:id="@+id/fgV1"
                    app:layout_constraintTop_toBottomOf="@id/calendarCV"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorFFE"
            />
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/waitCL"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    app:layout_constraintTop_toBottomOf="@id/fgV1"
                    android:background="@color/white"
            >
                <TextView
                        android:id="@+id/itemTV1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/homr_item_title_1"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingLeft="5dp"
                        android:background="@drawable/left_side"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginLeft="12dp"
                />
                <TextView
                        android:id="@+id/itemTV2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color666"
                        android:text="总数10个"
                        app:layout_constraintLeft_toRightOf="@id/itemTV1"
                        app:layout_constraintBottom_toBottomOf="@id/itemTV1"
                        android:layout_marginLeft="12dp"
                        android:paddingLeft="5dp"
                        android:textSize="11sp"
                />
                <TextView
                        android:id="@+id/itemTV3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color666"
                        android:text="未完成2个"
                        app:layout_constraintLeft_toRightOf="@id/itemTV2"
                        app:layout_constraintBottom_toBottomOf="@id/itemTV1"
                        android:layout_marginLeft="12dp"
                        android:paddingLeft="5dp"
                        android:textSize="11sp"
                />
            </android.support.constraint.ConstraintLayout>


            <android.support.v7.widget.RecyclerView
                    android:id="@+id/waitThing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/waitCL"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager">

            </android.support.v7.widget.RecyclerView>

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>