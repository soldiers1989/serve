<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/logoIV"
            android:layout_width="90dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/loginCCL"
            android:layout_marginBottom="44dp"
            android:layout_height="90dp"/>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/loginCCL"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/accountIcon"
                android:src="@mipmap/account"
                android:layout_width="17dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_height="20dp"/>
        <EditText
                android:id="@+id/accountTV"
                android:layout_width="0dp"
                app:layout_constraintRight_toLeftOf="@id/accountClean"
                app:layout_constraintLeft_toRightOf="@id/accountIcon"
                android:textCursorDrawable="@null"
                android:textColor="#666"
                android:layout_marginLeft="26dp"
                android:inputType="phone"
                android:singleLine="true"
                android:maxLength="11"
                android:textSize="16sp"
                android:textColorHint="#999"
                android:hint="请输入手机号码"
                app:layout_constraintTop_toTopOf="@id/accountIcon"
                app:layout_constraintBottom_toBottomOf="@id/accountIcon"
                android:background="@null"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/accountClean"
                android:src="@mipmap/clean"
                android:layout_width="15dp"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/accountIcon"
                app:layout_constraintBottom_toBottomOf="@id/accountIcon"
                android:layout_height="15dp"/>

        <View
                android:id="@+id/fg1"
                android:layout_width="match_parent"
                android:background="#D8D8D8"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/accountIcon"
                android:layout_marginTop="12dp"
                android:layout_height="1dp"/>


        <!--agadsgasdgadgadga-->

        <ImageView
                android:id="@+id/passwordIcon"
                android:src="@mipmap/password"
                android:layout_width="17dp"
                app:layout_constraintTop_toBottomOf="@id/fg1"
                android:layout_marginTop="36dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_height="20dp"/>
        <EditText
                android:id="@+id/passwordED"
                android:layout_width="0dp"
                app:layout_constraintRight_toLeftOf="@id/passwordClean"
                app:layout_constraintLeft_toRightOf="@id/passwordIcon"
                android:textCursorDrawable="@null"
                android:textColor="#666"
                android:layout_marginLeft="26dp"
                android:hint="密码"
                android:maxLength="12"
                android:singleLine="true"
                android:inputType="textPassword"
                android:digits="0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM"
                android:textColorHint="#999"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/passwordIcon"
                app:layout_constraintBottom_toBottomOf="@id/passwordIcon"
                android:background="@null"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/passwordClean"
                android:src="@mipmap/clean"
                android:layout_width="15dp"
                app:layout_constraintRight_toRightOf="parent"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/passwordIcon"
                app:layout_constraintBottom_toBottomOf="@id/passwordIcon"
                android:layout_height="15dp"/>

        <View
                android:id="@+id/fg2"
                android:layout_width="match_parent"
                android:background="#D8D8D8"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/passwordIcon"
                android:layout_marginTop="12dp"
                android:layout_height="1dp"/>


        <TextView
                android:id="@+id/forgetPasswordTV"
                android:layout_width="wrap_content"
                android:text="@string/user_forget_pass"
                android:textColor="#999"
                android:textSize="12sp"
                android:layout_marginTop="41dp"
                app:layout_constraintTop_toBottomOf="@id/fg2"
                android:layout_height="wrap_content"
        />

        <TextView android:layout_width="wrap_content"
                  android:text="@string/no_account"
                  android:textColor="@color/colorB6B"
                  android:textSize="12dp"
                  app:layout_constraintRight_toLeftOf="@id/goRegisterTV"
                  android:layout_marginTop="41dp"
                  app:layout_constraintTop_toBottomOf="@id/fg2"
                  android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/goRegisterTV"
                android:layout_width="wrap_content"
                android:text="@string/go_register"
                android:textColor="@color/colorFDB"
                android:textSize="12sp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="41dp"
                app:layout_constraintTop_toBottomOf="@id/fg2"
                android:layout_height="wrap_content"/>


        <RadioButton
                android:id="@+id/loginB"
                android:layout_width="match_parent"
                android:background="@drawable/login_rb_bac"
                app:layout_constraintTop_toBottomOf="@id/goRegisterTV"
                android:layout_marginTop="16dp"
                android:text="@string/login"
                android:gravity="center"
                android:checked="false"
                android:enabled="false"
                android:button="@null"
                android:textColor="@color/white"
                android:layout_height="44dp"/>
    </android.support.constraint.ConstraintLayout>

    <TextView
            android:id="@+id/shortcutTV"
            android:layout_width="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="快捷方式"
            android:textColor="@color/colorB6B"
            app:layout_constraintTop_toBottomOf="@id/loginCCL"
            android:layout_marginTop="79dp"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>

    <View android:layout_width="0dp"
          app:layout_constraintTop_toTopOf="@id/shortcutTV"
          app:layout_constraintBottom_toBottomOf="@id/shortcutTV"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintLeft_toRightOf="@id/shortcutTV"
          android:background="#d8d8d8"
          android:layout_marginLeft="20dp"
          android:layout_height="1dp"/>
    <View android:layout_width="0dp"
          app:layout_constraintTop_toTopOf="@id/shortcutTV"
          app:layout_constraintBottom_toBottomOf="@id/shortcutTV"
          app:layout_constraintRight_toLeftOf="@id/shortcutTV"
          android:layout_marginRight="20dp"
          app:layout_constraintLeft_toLeftOf="parent"
          android:background="#d8d8d8"
          android:layout_height="1dp"/>

    <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>
    <ImageView
            android:id="@+id/wxIV"
            android:layout_width="50dp"
            android:src="@mipmap/wx_icon"
            android:layout_marginTop="41dp"
            app:layout_constraintTop_toBottomOf="@id/shortcutTV"
            app:layout_constraintRight_toLeftOf="@id/guideline2"
            android:layout_marginRight="10dp"
            android:layout_height="50dp"/>

    <ImageView
            android:id="@+id/qqIV"
            android:layout_width="50dp"
            android:src="@mipmap/qq_icon"
            app:layout_constraintTop_toBottomOf="@id/shortcutTV"
            app:layout_constraintLeft_toRightOf="@id/guideline2"
            android:layout_marginTop="41dp"
            android:layout_marginLeft="10dp"
            android:layout_height="50dp"/>

</android.support.constraint.ConstraintLayout>