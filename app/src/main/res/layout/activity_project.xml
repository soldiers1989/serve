<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="6dp">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                <TextView
                        android:id="@+id/customerTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="客户信息"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                />
                <View
                        android:id="@+id/fgV"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorFFE"
                        app:layout_constraintTop_toBottomOf="@id/customerTV"
                        android:layout_marginTop="5dp"/>
                <TextView
                        android:id="@+id/info1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="客户编号：11111"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/fgV"/>
                <TextView
                        android:id="@+id/info2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="客户姓名：周老大"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/info1"/>
                <TextView
                        android:id="@+id/info3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="户型：三室一厅"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/info2"/>
                <TextView
                        android:id="@+id/info4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="建筑面积：100m2"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/info3"/>

                <TextView
                        android:id="@+id/info5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="150dp"
                        android:padding="5dp"
                        android:text="套内建筑面积：90m2"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/info3"/>
                <TextView
                        android:id="@+id/info6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="150dp"
                        android:padding="5dp"
                        android:text="房屋类型；新房"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/info2"/>
                <TextView
                        android:id="@+id/info7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="150dp"
                        android:padding="5dp"
                        android:text="客户电话：1235555"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/info1"/>


                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@mipmap/edit_icon"
                           app:layout_constraintRight_toRightOf="parent"
                           app:layout_constraintTop_toTopOf="@id/info1"
                           app:layout_constraintBottom_toBottomOf="@id/info1"/>


                <TextView
                        android:id="@+id/info8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/location_icon"
                        android:drawablePadding="5dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:padding="5dp"
                        android:text="北京市朝阳区来广营街道北纬四十度2号楼1单元1005"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/info4"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="6dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:background="@color/color366">


                    <TextView
                            android:id="@+id/customerTag"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:gravity="center"
                            android:text="客户标签"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                    />
                    <TextView
                            android:id="@+id/customerTime"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="12dp"
                            android:gravity="center"
                            android:text="客户经理  2019-07-11"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginRight="10dp"
                    />
                </android.support.constraint.ConstraintLayout>

                <android.support.v7.widget.RecyclerView
                        android:id="@+id/progressRV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                        android:orientation="horizontal">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="6dp">
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/actionRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:layoutManager="android.support.v7.widget.GridLayoutManager"
                    app:spanCount="4"
                    android:orientation="vertical">
            </android.support.v7.widget.RecyclerView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="6dp">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                <TextView
                        android:id="@+id/contract2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="合同开工日期：2019-05-01"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                        android:id="@+id/contract3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="合同竣工日期：2019-06-01"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        app:layout_constraintTop_toBottomOf="@id/contract2"/>
                <TextView
                        android:id="@+id/contract4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="施工状态:已延期"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        app:layout_constraintTop_toBottomOf="@id/contract3"/>
                <TextView
                        android:id="@+id/contract8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="今日进度:水电施工、木门测量"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        app:layout_constraintTop_toBottomOf="@id/contract4"/>


                <TextView
                        android:id="@+id/contract6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="150dp"
                        android:padding="5dp"
                        android:text="竣工日期：2019-06-01"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        app:layout_constraintTop_toBottomOf="@id/contract2"/>
                <TextView
                        android:id="@+id/contract7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="150dp"
                        android:padding="5dp"
                        android:text="开工日期：2019-05-01"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="6dp">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                <TextView
                        android:id="@+id/serveTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务信息"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                />
                <View
                        android:id="@+id/fgV2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorFFE"
                        app:layout_constraintTop_toBottomOf="@id/serveTV"
                        android:layout_marginTop="5dp"/>
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/serveRV"
                        android:layout_width="match_parent"
                        android:layout_height="97dp"
                        app:layoutManager="android.support.v7.widget.GridLayoutManager"
                        app:spanCount="2"
                        app:layout_constraintTop_toTopOf="@id/fgV2"
                        >
                </android.support.v7.widget.RecyclerView>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="6dp">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                <TextView
                        android:id="@+id/worker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工人信息"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"/>
                <View
                        android:id="@+id/fgV3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorFFE"
                        app:layout_constraintTop_toBottomOf="@id/worker"
                        android:layout_marginTop="5dp"/>
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/workerRV"
                        android:layout_width="match_parent"
                        android:layout_height="97dp"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                        app:layout_constraintTop_toTopOf="@id/fgV3"
                       >
                </android.support.v7.widget.RecyclerView>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>



        <android.support.constraint.ConstraintLayout
                android:id="@+id/waitCL"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                app:layout_constraintTop_toBottomOf="@id/fgV1"
                android:background="@color/white"
        >
            <TextView
                    android:id="@+id/itemTV1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="资料信息"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingLeft="5dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginLeft="12dp"
            />

        </android.support.constraint.ConstraintLayout>


        <android.support.v7.widget.RecyclerView
                android:id="@+id/dataRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/waitCL"
                android:padding="10dp"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>