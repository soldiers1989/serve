<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:background="@drawable/left_side"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:padding="10dp">

    <TextView
            android:id="@+id/stateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已生效"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="12dp"
            app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="整改编号：12342"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="12dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <View
            android:id="@+id/fgV"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorFFE"
            app:layout_constraintTop_toBottomOf="@id/stateTV"
            android:layout_marginTop="10dp"/>


    <TextView
            android:id="@+id/nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发起人：张三"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="12dp"
            app:layout_constraintTop_toBottomOf="@id/fgV"/>
    <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发起时间：2019-05-01"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="12dp"
            app:layout_constraintTop_toBottomOf="@id/fgV"/>
    <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型："
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nameTV"/>
    <TextView
            android:id="@+id/typeContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:paddingTop="5dp"
            app:layout_constraintLeft_toRightOf="@id/content"
            app:layout_constraintTop_toTopOf="@id/content"/>

</android.support.constraint.ConstraintLayout>