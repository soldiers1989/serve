        <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三室一厅  |  100m²  |  新房"
                android:gravity="left"
                android:textColor="@color/color888"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/coverIV"
                app:layout_constraintTop_toTopOf="@id/coverIV"
                app:layout_constraintLeft_toRightOf="@id/coverIV"
                android:layout_marginLeft="10dp"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/tagRV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layoutManager="android.support.v7.widget.GridLayoutManager"
                app:spanCount="4"
                app:layout_constraintTop_toBottomOf="@id/info"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/info"
                app:layout_constraintRight_toLeftOf="@+id/detailTV">
        </android.support.v7.widget.RecyclerView>


        <TextView
                android:id="@+id/detailTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动态"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:drawableLeft="@mipmap/share_icon"
                android:textColor="@color/color222"
                android:textSize="12sp"
                android:layout_marginRight="5dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@id/coverIV"
        />
        <View android:layout_width="5dp"
              android:layout_height="5dp"
              android:background="@drawable/dot_red"
              app:layout_constraintBottom_toTopOf="@id/detailTV"
              app:layout_constraintLeft_toRightOf="@id/detailTV"
              app:layout_constraintRight_toRightOf="@id/detailTV"
              app:layout_constraintTop_toTopOf="@id/detailTV"
        />
