<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="74dp">


    <ImageView
            android:id="@+id/head"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@mipmap/test_h_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="27dp"
    />


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="@id/head"
              android:textSize="12sp"
              android:textColor="@color/color888"
              android:text="2019-07-22  15:23:56   工长  王武"
              app:layout_constraintLeft_toRightOf="@id/head"
              android:layout_marginLeft="14dp"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintBottom_toBottomOf="@+id/head"
              android:layout_marginBottom="10dp"
              android:textSize="12sp"
              android:text="客户太矫情了！"
              app:layout_constraintLeft_toRightOf="@id/head"
              android:layout_marginLeft="14dp"
              android:textColor="@color/black"/>

    <View android:layout_width="0dp"
          android:layout_height="1dp"
          app:layout_constraintLeft_toRightOf="@+id/head"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:layout_marginRight="14dp"
          android:background="@color/colorD8D"
    />
</android.support.constraint.ConstraintLayout>