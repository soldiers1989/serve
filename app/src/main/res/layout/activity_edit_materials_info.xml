<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
            android:id="@+id/item1"
            android:layout_width="match_parent"
            android:layout_height="44dp">

        <TextView
                android:id="@+id/title1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="测量日期："
                android:textSize="13sp"
                android:textColor="@color/black"
                android:gravity="center_vertical|right"/>


        <TextView android:layout_width="0dp"
                  android:layout_height="match_parent"
                  app:layout_constraintLeft_toRightOf="@id/title1"
                  app:layout_constraintRight_toRightOf="parent"
                  android:textColor="@color/color999"
                  android:gravity="center_vertical"
                  android:text="点击设置日期"
                  android:textSize="13sp"
                  android:background="@null"/>
        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/colorFFE"
              app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:id="@+id/item2"
            app:layout_constraintTop_toBottomOf="@id/item1"
            android:layout_width="match_parent"
            android:layout_height="44dp">

        <TextView
                android:id="@+id/title2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="测量日期："
                android:textSize="13sp"
                android:textColor="@color/black"
                android:gravity="center_vertical|right"/>


        <CheckBox
                android:id="@+id/yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/title2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="是"
                android:checked="true"
                android:textSize="12sp"
                android:textColor="@color/color555"
        />
        <CheckBox
                android:id="@+id/no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/yes"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="20dp"
                android:text="否"
                android:textSize="12sp"
                android:textColor="@color/color555"
        />

        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/colorFFE"
              app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:id="@+id/item3"
            android:layout_width="match_parent"
            android:layout_height="44dp">

        <TextView
                android:id="@+id/title3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="复尺日期："
                android:textSize="13sp"
                android:textColor="@color/black"
                android:gravity="center_vertical|right"/>


        <TextView android:layout_width="0dp"
                  android:layout_height="match_parent"
                  app:layout_constraintLeft_toRightOf="@id/title3"
                  app:layout_constraintRight_toRightOf="parent"
                  android:textColor="@color/color999"
                  android:gravity="center_vertical"
                  android:text="点击设置日期"
                  android:textSize="13sp"
                  android:background="@null"/>
        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/colorFFE"
              app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:id="@+id/item4"
            android:layout_width="match_parent"
            android:layout_height="44dp">

        <TextView
                android:id="@+id/title4"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="送货日期："
                android:textSize="13sp"
                android:textColor="@color/black"
                android:gravity="center_vertical|right"/>


        <TextView android:layout_width="0dp"
                  android:layout_height="match_parent"
                  app:layout_constraintLeft_toRightOf="@id/title4"
                  app:layout_constraintRight_toRightOf="parent"
                  android:textColor="@color/color999"
                  android:gravity="center_vertical"
                  android:text="点击设置日期"
                  android:textSize="13sp"
                  android:background="@null"/>
        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/colorFFE"
              app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:id="@+id/item5"
            app:layout_constraintTop_toBottomOf="@id/item2"
            android:layout_width="match_parent"
            android:layout_height="44dp">

        <TextView
                android:id="@+id/title5"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="送货人："
                android:textSize="13sp"
                android:textColor="@color/black"
                android:gravity="center_vertical|right"/>

        <EditText android:layout_width="141dp"
                  android:layout_height="29dp"
                  android:background="@drawable/labels_bac_d"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintLeft_toRightOf="@id/title5"
                  android:textColor="@color/black"
                  android:textSize="13sp"
        />
        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/colorFFE"
              app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:id="@+id/item6"
            app:layout_constraintTop_toBottomOf="@id/item2"
            android:layout_width="match_parent"
            android:layout_height="44dp">

        <TextView
                android:id="@+id/title6"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="送货人电话："
                android:textSize="13sp"
                android:textColor="@color/black"
                android:gravity="center_vertical|right"/>

        <EditText android:layout_width="141dp"
                  android:layout_height="29dp"
                  android:background="@drawable/labels_bac_d"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintLeft_toRightOf="@id/title6"
                  android:textColor="@color/black"
                  android:textSize="13sp"
        />

    </android.support.constraint.ConstraintLayout>

    <RadioButton android:layout_width="match_parent"
                 android:layout_height="49dp"
                 android:background="@drawable/labels_button_s"
                 android:button="@null"
                 android:layout_marginLeft="12dp"
                 android:layout_marginRight="12dp"
                 android:text="保存"
                 android:gravity="center"
                 android:textColor="@color/white"
                 app:layout_constraintTop_toBottomOf="@id/item12"
                 android:layout_marginTop="100dp"/>

</LinearLayout>