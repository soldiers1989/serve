<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/labels_bac_d"
        android:padding="10dp">

    <TextView
            android:id="@+id/customerTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题1"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
    />
    <View
            android:id="@+id/fgV"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorFFE"
            app:layout_constraintTop_toBottomOf="@id/customerTV"
            android:layout_marginTop="5dp"/>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/issueRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fgV"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager">

    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>