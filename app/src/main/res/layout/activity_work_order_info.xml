<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottom"
    >
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dp">

                <TextView
                        android:id="@+id/customerTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="客户信息"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                />
                <View
                        android:id="@+id/fgV"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorFFE"
                        app:layout_constraintTop_toBottomOf="@id/customerTV"
                        android:layout_marginTop="5dp"/>
                <TextView
                        android:id="@+id/info1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/phone_icon"
                        android:drawablePadding="5dp"
                        android:padding="5dp"
                        android:text="客户姓名：张三"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/fgV"/>
                <TextView
                        android:id="@+id/info2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="客户姓名：周老大"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/info1"/>
                <TextView
                        android:id="@+id/info3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="户型：三室一厅"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/info2"/>
                <TextView
                        android:id="@+id/info4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="建筑面积：100m2"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/info3"/>

                <TextView
                        android:id="@+id/info5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="189dp"
                        android:padding="5dp"
                        android:text="套内建筑面积：90m2"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/info3"/>
                <TextView
                        android:id="@+id/info6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="189dp"
                        android:padding="5dp"
                        android:text="房屋类型；新房"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/info2"/>
                <TextView
                        android:id="@+id/info7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="189dp"
                        android:padding="5dp"
                        android:text="客户电话：1235555"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/info1"/>


                <TextView
                        android:id="@+id/info8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:padding="5dp"
                        android:text="项目地址：北京市朝阳区来广营街道北纬四十度2号楼1单元1005"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/info4"/>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:padding="10dp">

                <TextView
                        android:id="@+id/project"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="项目日期"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"/>
                <View
                        android:id="@+id/fgV1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorFFE"
                        app:layout_constraintTop_toBottomOf="@id/project"
                        android:layout_marginTop="5dp"/>
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/dateRV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/fgV1"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager">

                </android.support.v7.widget.RecyclerView>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:padding="10dp">

                <TextView
                        android:id="@+id/workorder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工单信息"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"/>
                <View
                        android:id="@+id/fgV2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorFFE"
                        app:layout_constraintTop_toBottomOf="@id/workorder"
                        android:layout_marginTop="5dp"/>
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                        app:layout_constraintTop_toBottomOf="@id/fgV2">

                </android.support.v7.widget.RecyclerView>

                <View
                        android:id="@+id/fgV3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorFFE"
                        app:layout_constraintTop_toBottomOf="@id/info"
                        android:layout_marginTop="5dp"/>

                <android.support.v7.widget.RecyclerView
                        android:id="@+id/workorderRV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                        app:layout_constraintTop_toBottomOf="@id/fgV3">

                </android.support.v7.widget.RecyclerView>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:padding="10dp">

                <TextView
                        android:id="@+id/history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="历史记录"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"/>
                <View
                        android:id="@+id/fgV4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorFFE"
                        app:layout_constraintTop_toBottomOf="@id/history"
                        android:layout_marginTop="5dp"/>
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/historyRV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/fgV4"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager">

                </android.support.v7.widget.RecyclerView>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/color366"
            app:layout_constraintBottom_toBottomOf="parent">

        <EditText android:layout_width="280dp"
                  android:layout_height="30dp"
                  android:background="@drawable/labels_bac_d"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintLeft_toLeftOf="parent"
                  android:layout_marginLeft="19dp"
        />

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@mipmap/im_icon"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   android:layout_marginRight="19dp"
        />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>