<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
            android:id="@+id/tabCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            app:cardBackgroundColor="@color/white">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
            <TextView
                    android:id="@+id/item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="开工交底"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/left_line_366"
                    android:textColor="@color/black"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="12sp"
                      android:text="已完成"
                      android:textColor="@color/black"
                      app:layout_constraintBaseline_toBaselineOf="@id/item1"
                      app:layout_constraintRight_toRightOf="parent"/>
            <View
                    android:id="@+id/hLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorF1F"
                    app:layout_constraintTop_toBottomOf="@id/item1"
                    android:layout_marginTop="5dp"
            />
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/itemRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/hLine"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager">
            </android.support.v7.widget.RecyclerView>

            <android.support.constraint.ConstraintLayout
                    android:id="@+id/operationCL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/itemRV"
                    android:layout_marginTop="5dp">
                <View
                        android:id="@+id/hLine1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorF1F"
                />

                <TextView
                        android:id="@+id/operation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="操作："
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@id/hLine1"
                        android:layout_marginTop="7dp"/>

                <android.support.v7.widget.RecyclerView
                        android:id="@+id/operationRV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/operation"
                        app:layout_constraintBottom_toBottomOf="@id/operation"
                        app:layout_constraintLeft_toRightOf="@id/operation"
                        app:layout_constraintRight_toRightOf="parent"
                        android:orientation="horizontal"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager">
                </android.support.v7.widget.RecyclerView>
            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>